<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="PlayPauseButton">
        <attr name="bgColor" format="reference|color" />
    </declare-styleable>


    <declare-styleable name="LrcView">
        <attr name="textSize" format="dimension" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="normalTextColor" format="reference|color" />
        <attr name="currentTextColor" format="reference|color" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="MultiViewPager">
        <!-- Child view inside a page to match the page size against. -->
        <attr name="matchChildWidth" format="reference" />
        <!-- Maximum size. -->
        <attr name="android:maxWidth" />
        <!-- Maximum size. -->
        <attr name="android:maxHeight" />
    </declare-styleable>

</resources>