<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/info_secret_setting">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="secret_check"
            android:title="@string/pref_title_social_recommendations"
            android:summary="@string/pref_title_social"
            />
        <EditTextPreference
            android:dependency="secret_check"
            android:capitalize="words"
            android:defaultValue="@string/pref_default_display_name"
            android:inputType="textCapWords"
            android:key="nickname"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_display_name" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/info_network_setting">

        <SwitchPreference
            android:defaultValue="true"
            android:key="wifi_switch"
            android:title="@string/pref_title_wifi" />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/info_music_mode_setting">

        <ListPreference
            android:defaultValue="0"

            android:entries="@array/info_music_mode"
            android:entryValues="@array/info_music_mode_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:key="mode_list"
            android:title="@string/info_music_mode" />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_header_data_sync">

        <Preference android:title="@string/pref_title_clear"
            android:key="key_cache"
            >
        </Preference>
        <Preference android:title="@string/pref_title_about"
            android:key="key_about"
            >
        </Preference>

    </PreferenceCategory>




</PreferenceScreen>
